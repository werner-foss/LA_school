<section class="section-padding">
  <div class="container">
    <div class="row">
      <div class="header-section text-center">
        <h2 class="badge badge-custom"><%= @adult.title %></h2>
        <%= render 'admin_actions' %>
        <hr class="bottom-line">
      </div>
      <div class="col-md-4 col-sm-6">
        <div class="service-box text-center">
           <%= image_tag adults_img(@adult.main_image, 'main') %>
        </div>
        <div class="service-box">
          <div class="icon-text">
            <h5 class="ser-text text-center"><%= @adult.subtitle %></h5>
          </div>
          <ul class="list-group">
            <li class="list-group-item type-list button-custom">Type of the course</li>
            <% @adult.courses.each do |t| %>
              <li class="list-group-item"><%= t.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-md-8 col-sm-6">
        <div class="service-box text-left">
          <p class="ser-text"><%= @adult.body %></p>
          <%= link_to 'View all courses', adults_path, class: "btn btn-warning btn-sm button-peach" %>
          <%= link_to 'Purchase this course', contacts_path, class: "btn btn-info type-list btn-sm button-custom" %>
          <!-- Form for comments -->
          <% unless current_user.is_a? GuestUser %>
            <%= form_for @comment, url: '#' do |f| %>
              <div class= "form-group">
                <%= f.label :content %>
                <%= f.text_area :content, class: 'form-control' %>
              </div>
              <%= f.submit 'Post Comment', class: 'btn btn-primary' %>
            <% end %>
          <% end %>
          <!-- Form for comments -->
        </div>
        <%= render @adult.comments %>
      </div>
    </div>
  </div>
</section>