<%= form_for(adult) do |f| %>
  <% if adult.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adult.errors.count, "error") %> prohibited this adult from being saved:</h2>

      <ul>
      <% adult.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-md-4 col-sm-6">
    <div class="service-box text-center">
      <div class="form-group adults-form">
        <label class= "btn btn-danger left-float btn-adults">Upload a big image <%= f.file_field :main_image, style: 'display:none;' %></label>
        <label class= "btn btn-danger right-float btn-adults">Upload a small image <%= f.file_field :thumb_image, style: 'display:none;' %></label>
      </div>
    </div>
    <div class="service-box">
      <div class="icon-text">
        <div class="form-group">
          <%= f.text_field :title, class:'form-control', placeholder: 'Title' %>
        </div>
        <div class="form-group">
          <%= f.text_field :subtitle, class:'form-control', placeholder: 'Subtitle' %>
        </div>
      </div>
      
      <div>
        <h4>Type of the course</h4>
        <%= f.fields_for :courses do |courses_form| %>
          <%= render 'course_fields', f: courses_form %>
        <% end %>
      </div>
      
      <div>
        <%= link_to_add_association 'Add a type', f, :courses %>
      </div>
      
    </div>
  </div>
  <div class="col-md-8 col-sm-6">
    <div class="service-box text-left">
      <div class="form-group">
        <%= f.text_area :body, class:'form-control', rows: 5, placeholder: 'Content' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save an item", class: 'btn btn-info type-list btn-block button-custom' %>
      </div>
      <%= link_to 'Back', adults_path, class: "btn btn-warning btn-sm button-peach" %>
    </div>
  </div>
  
<% end %>

