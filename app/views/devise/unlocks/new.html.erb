<div class="devise-card">
  <div class="container devise-container">
    <div class="card">
      <div class="card-header text-center"><h3>>Resend unlock instructions</h3></div>
      <div class="card-block">
        <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>
            
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
            
          <div class="form-group devise-form">
            <%= f.submit "Resend unlock instructions", class: 'btn btn-success news-button' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
       <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>