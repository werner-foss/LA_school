<%= form_for(question) do |f| %>
  <% if question.errors.any? %>
    <% question.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  
  <div class="form-group">
    <%= f.text_field :title, class:'form-control', placeholder: 'Title' %>
  </div>
  
  <div class="form-group">
    <%= f.collection_select(:topic_id, Topic.all, :id, :title,
                              {
                                include_blank: true
                              },
                              class: 'form-control'
                            )
    %>
  </div>
  
  <div class="form-group">
    <%= f.text_area :body, class:'form-control', placeholder: 'Body'  %>
  </div>

  <div class="form-group">
    <%= f.submit "Save an item", class: 'btn btn-info news-button btn-block' %>
  </div>
<% end %>
