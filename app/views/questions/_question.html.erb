<p> Title: <%= link_to question.title, question %></p>
<p> Body: <%= question.body %></p>
<p> Topic: <%= question.topic_id %></p>
<% if logged_in?(:site_admin) %>
  <p><%= link_to 'Edit', edit_question_path(question) %> |
    <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>
<hr>