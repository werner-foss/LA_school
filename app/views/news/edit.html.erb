<section id="section-works" class="section appear clearfix">
	<div class="container portf">
		<div class="row mar-bot30">
			<div class="col-md-offset-3 col-md-6">
				<div class="section-header">
				  <h2 class="section-heading animated" data-animation="bounceInUp">Editing News</h2>
				</div>
			</div>
		</div>
    <div class="row">
      <div class="col-md-12">
        <div class="portfolio-items isotopeWrapper">
          <article class="col-md-8 news-position">
            <%= render 'form', news: @news %>
            <nav class="breadcrumb">
              <span class="breadcrumb-item btn btn-secondary btn-sm news-button"><%= link_to 'Show', @news %></span>
              <span class="breadcrumb-item btn btn-secondary btn-sm news-button"><%= link_to 'Back', news_index_path %></span>
            </nav>
          </article>
        </div>
        <div class="col-md-4"></div>
      </div> 
    </div>
  </div>
</section>