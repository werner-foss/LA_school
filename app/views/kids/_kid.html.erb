<p> Title <%= link_to kid.title, kid_path(kid) %></p>
<p> Level <%= kid.subtitle %></p>
<p><%= image_tag kid.thumb_image %></p>
<% if logged_in?(:site_admin) %>
  <p><%= link_to 'Edit', edit_kid_path(kid) %> |
    <%= link_to 'Destroy', kid, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>